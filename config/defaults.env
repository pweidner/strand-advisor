# Required at runtime (set these in your shell or a profile):
# export REF_FASTA=/path/to/GRCh38_full_analysis_set_plus_decoy_hla.fa

# Optional defaults
CHROMS_FILE=${CHROMS_FILE:-config/chroms.grch38.txt}
